syntax enable
colorscheme darkblue
set showmode
set showmatch
set shiftwidth=4
set tabstop=4
set expandtab
" set encoding=cp932
set directory=/tmp
set undodir=/tmp
set nobackup
set fileformats=unix,dos
set fileformat=dos
set ignorecase
set belloff=all

" CTRL-X are Cut
vnoremap <C-X> "+x
" CTRL-C are Copy
vnoremap <C-C> "+y
" CTRL-V are Paste
map <C-V>       "+gP

set guifont=Noto\ Mono\ 12
